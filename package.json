  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npx lerna run dev",
    "build": "npx lerna run build",
    "format": "prettier --write 'packages/**/*.{js,jsx,ts,tsx,css,scss,json}'",
