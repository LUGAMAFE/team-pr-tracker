{
  "compilerOptions": {
    "checkJs": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typesRoots": ["src/@types"]
}
